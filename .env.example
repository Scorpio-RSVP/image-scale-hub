# ===========================================
# IMAGE SCALE HUB - CONFIGURATION
# ===========================================

# Application
SECRET_KEY=change-this-to-random-secret-key
APP_NAME=Image Scale Hub
APP_VERSION=1.0.0
DEBUG=False
FLASK_CONFIG=production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite (Default - Easy backup, single file)
DATABASE_URL=sqlite:////app/data/users.db

# MySQL (Recommended for production - scalable)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/image_resizer

# PostgreSQL (Alternative - robust)
# DATABASE_URL=postgresql://user:password@localhost:5432/image_resizer

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Provider: smtp, sendgrid, mailgun, ses
MAIL_PROVIDER=smtp

# SMTP Settings (Gmail, Brevo, Mailjet, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Image Resizer
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# SendGrid (Alternative)
# SENDGRID_API_KEY=SG.xxxxx

# Mailgun (Alternative)
# MAILGUN_API_KEY=key-xxxxx
# MAILGUN_DOMAIN=mg.yourdomain.com

# AWS SES (Alternative)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=xxxxx
# AWS_SES_REGION=us-east-1

# ===========================================
# SECURITY
# ===========================================
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ===========================================
# STORAGE & UPLOADS
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif,bmp
DEFAULT_STORAGE_LIMIT_MB=100
IMAGE_STORAGE_MODE=private

# ===========================================
# SSL & DOMAIN
# ===========================================
FORCE_HTTPS=False
CUSTOM_DOMAIN=

# ===========================================
# FEATURES
# ===========================================
ENABLE_REGISTRATION=False
PROCESSING_MODE=hybrid

# ===========================================
# UPDATES
# ===========================================
UPDATE_CHECK_URL=https://api.github.com/repos/YOUR_USERNAME/image-resizer-pro/releases/latest
ENABLE_AUTO_UPDATE=True
